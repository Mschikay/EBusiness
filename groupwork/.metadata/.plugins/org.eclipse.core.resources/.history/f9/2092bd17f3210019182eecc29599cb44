var info=document.getElementById("info");
var para = document.createElement('p');
	
$("#check").click(function(){
	var name = document.getElementById("name").value;
    var state = document.getElementById("state").value;
    var data = {
		name: name,
		state: state
		};
    var string = "";
    
    if (name == null || state == null || name == "---Animal Name---" || state == "---like?---"){
    	string = "Please select your pet name or pet state first."
    	para.innerHTML = string
		info.appendChild(para);
    }else{
    	$.ajax({
    		url:"showAnimal",
    		type: "post",
    	    data: JSON.stringify(data),
    		contentType:"application/json",
    		success: [
    			function (result, status) {			
    				string = name + " is a " + result.species + " that " +
    				state + " " + result.food;
    				infoItem = document.createElement('p');
    				infoItem.innerHTML = string;
    				info.appendChild(infoItem);			
    		}],
    		error: [function (res) {
    			$("#info").empty();
    			string = "Sorry. Error occurred in server.";
    			para.innerHTML = string;
    			info.appendChild(para);
    		}]
    	});
    }
    
});

$("#clear").click(function(){
	$("#info").empty();
});