var name = "Meowsy"
var state = "like";

var data = {
		animal: name,
		state: state};

$("#btn").click(function(){
	$.ajax({
		url:"showAnimal",
		type: "post",
	    data: JSON.stringify(data),
		contentType:"application/json",
		success: [
			function (result, status) {
				var string = "Meowsy is a " + result[0] + " that " +
				state + " " + result[1];
				alert(string);
		}],
		error: [function (res) {
		}]
	});
});