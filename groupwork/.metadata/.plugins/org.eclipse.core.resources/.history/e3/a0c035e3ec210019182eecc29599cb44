var name = "Meowsy"
var state = "like";

var data = {
		animal: name,
		state: state};

$("#btn").click(function(){
	$.ajax({
		url:"showAnimal",
		type: "post",
	    data: JSON.stringify(data),
		contentType:"application/json",
		success: [
			function (result, status) {
				console.log(result);
				var string = "Meowsy is a " + result.species + " that " +
				state + " " + result.food;
				var para = "<p>" + string + "</p>";
				var info=document.getElementById("info");
				info.appendChild(para);
				
				alert(string);
			
		}],
		error: [function (res) {
		}]
	});
});

$("#clear").click(function(){
	$("#clear").empty();
});